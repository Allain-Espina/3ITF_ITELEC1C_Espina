@model InstructorModel;

<h1>Instructor Details</h1>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>
            @{
                var status = "";
                if (@Model.IsTenured)
                {
                    status = "Full-Time Employee";
                }
                else
                {
                    status = "Part-Time Employee";
                }
            }
            @status
        </td>
    </tr>
    <tr>
        <th>Rank</th>
        <td>@Model.Rank</td>
    </tr>
    <tr>
        <th>Date Hired</th>
        <td>
            @{
                    var DateHired = @Model.HiringDate;
                    string HiringDate = String.Format("{0:dd/MM/yyyy}", DateHired);
                }
                @HiringDate
        </td>
    </tr>
</table>

<a asp-action="Index">Return</a>
