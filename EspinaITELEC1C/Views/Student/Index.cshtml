<table class="table table-hover table-sm">
    <tr>
        <th hidden>Student ID:</th>
        <th></th>
        <th>Full Name:</th>
        <th></th>
        <th>GPA:</th>
        <th></th>
        <th>Enrollment Date</th>
        <th></th>
        <th>Program</th>
        <th></th>
        <th>Email Address:</th>
        <th></th>
        <th>Show Details:</th>
        <th></th>
        <th>Update:</th>
        <th></th>
        <th>Delete:</th>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td hidden>@student.StudentId</td>
            <td></td>
            <td>@student.StudentName</td>
            <td></td>
            <td>@student.GeneralWeightedAverage</td>
            <td></td>
            <td>
                @{
                    var DateEnrolled = student.DateEnrolled;
                    string EnrollmentDate = String.Format("{0:dd/MM/yyyy}", DateEnrolled);
                }
                @EnrollmentDate
            </td>
            <td></td>
            <td>@student.StudentCourse</td>
            <td></td>
            <td>@student.StudentEmail</td>
            <td></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="StudentDetails" asp-route-id="@student.StudentId">Show Details</a></td>
            <td></td>
            <td><a style="color: white;" class="btn btn-info" asp-action="UpdateStudent" asp-route-id="@student.StudentId">Update</a></td>
            <td></td>
            <td><a style="color: white;" class="btn btn-danger" asp-action="DeleteStudent" asp-route-id="@student.StudentId">Delete</a></td>

        </tr>
    }
</table>