@{
}

@model StudentModel;

<h1>Update Student Record</h1>

<form asp-controller="Student" asp-action="UpdateStudent" method="post">
    <div class="form-group">
        <label asp-for="StudentId" readonly>Student ID Number</label>
        <input class="form-control" asp-for="StudentId" readonly>
    </div> 
    <br />
    <div class="form-group">
        <label asp-for="StudentName">Student Name</label>
        <input class="form-control" asp-for="StudentName" autocomplete="off">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="GeneralWeightedAverage">GPA</label>
        <input class="form-control" asp-for="GeneralWeightedAverage">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DateEnrolled">Enrollment Date</label>
        <input class="form-control" asp-for="DateEnrolled">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="StudentCourse">Course</label>
        <select class="form-control" asp-for="StudentCourse" asp-items="@Html.GetEnumSelectList(typeof(Course))"></select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="StudentEmail">Email Address</label>
        <input class="form-control" asp-for="StudentEmail">
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>